            </Grid>            
            <Button x:Name="Start" Content="Iniciar" Click="Start_Click" />
            <Button x:Name="Exit" Content="Salir" Click="Exit_Click" />
            <TextBlock x:Name="txt"></TextBlock>
        </StackPanel>
    </Grid>

</phone:PhoneApplicationPage>